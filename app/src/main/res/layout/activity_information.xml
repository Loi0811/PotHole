<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Information"
    android:background="@drawable/backgroud">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="INFOR"
                android:textColor="@color/light_gray"
                android:textSize="40dp"
                android:textStyle="bold"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="6"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="MA"
                android:textColor="@color/light_gray"
                android:textSize="40dp"
                android:textStyle="bold"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="6"
                android:shadowRadius="2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="TION"
                android:textColor="@color/light_gray"
                android:textSize="40dp"
                android:textStyle="bold"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="6"
                android:shadowRadius="2"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:src="@drawable/ic_back_foreground"
            android:background="@drawable/button_circle" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/title"
        app:cardCornerRadius="60dp"
        android:id="@+id/user_image"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:background="@drawable/image"
            android:src="@drawable/baseline_photo_camera_24"
            android:padding="40dp"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:background="@drawable/bgdetail"
        android:layout_below="@id/title"
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_number"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="70dp"
            android:textSize="24dp"
            android:text="Phone Number"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/edittext"
            android:textSize="28dp"
            android:padding="10dp"
            android:hint="Phone"
            android:textColor="@color/dark_gray"
            android:inputType="phone"
            android:layout_below="@id/phone_number"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adress"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:text="Address"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:layout_below="@id/phone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/district"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/edittext"
            android:textSize="28dp"
            android:padding="10dp"
            android:hint="District"
            android:textColor="@color/dark_gray"
            android:layout_below="@id/adress"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/province"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:textSize="28dp"
            android:padding="10dp"
            android:hint="Province"
            android:textColor="@color/dark_gray"
            android:layout_below="@id/district"/>
        <LinearLayout
            android:id="@+id/sex_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@id/province">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="Birthday"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthday"
                    android:background="@drawable/edittext"
                    android:textSize="28dp"
                    android:padding="10dp"
                    android:text="Birthday"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="Gender"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/gender"
                    android:background="@drawable/edittext"
                    android:textSize="28dp"
                    android:padding="10dp"
                    android:textColor="@color/dark_gray"
                    android:entries="@array/gender_options"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/sex_birth"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp">
            <Button
                android:id="@+id/skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="28dp"
                android:text="SKIP"
                android:background="@drawable/button_spinner"
                android:textColor="@color/dark_gray"/>
            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="28dp"
                android:text="SAVE"
                android:background="@drawable/button"
                android:textColor="@color/light_gray"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>