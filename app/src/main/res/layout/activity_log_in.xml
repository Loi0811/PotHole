<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:background="@drawable/backgroud">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/back_home"
        android:layout_margin="15dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back_foreground"
            android:background="@drawable/button_circle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_home_foreground"
            android:background="@drawable/button_circle"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/back_home"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="L"
            android:textColor="@color/light_gray"
            android:textSize="40dp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="6"
            android:shadowRadius="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="O"
            android:textColor="@color/light_gray"
            android:textSize="40dp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="6"
            android:shadowRadius="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="G IN"
            android:textColor="@color/light_gray"
            android:textSize="40dp"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="6"
            android:shadowRadius="2"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/detail"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bgdetail"
        android:layout_centerHorizontal="true">
        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="28dp"
            android:hint="Email"
            android:padding="15dp"
            android:textColor="@color/gray"
            android:drawableLeft="@drawable/ic_mail_foreground"
            android:background="@drawable/edittext"
            android:inputType="textEmailAddress"/>
        <RelativeLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_below="@id/user">
            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:hint="Password"
                android:padding="15dp"
                android:textColor="@color/gray"
                android:drawableLeft="@drawable/ic_pwd_foreground"
                android:background="@drawable/edittext"
                android:inputType="textPassword"/>
            <ImageView
                android:id="@+id/eye"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_eye_foreground"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotpwd"
            android:layout_margin="15dp"
            android:text="LOG IN"
            android:textSize="30dp"
            android:background="@drawable/button"
            android:textColor="@color/light_gray"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/forgotpwd"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="24dp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/signup"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account"
            android:textSize="24dp"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>